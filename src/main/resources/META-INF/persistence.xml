<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="meuPU" transaction-type="JTA">
        <jta-data-source>java:/PostgresDS</jta-data-source>

        <class>scroll.projects.jakarta.model.Usuario</class>

        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            <property name="jakarta.persistence.jdbc.show_sql" value="true"/>
            <property name="jakarta.persistence.jdbc.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>